@model List<dotnetapp.Models.HistoricalTour>

<h2>Booked Tours</h2>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Tour Name</th>
                <th>Start Time</th>
                <th>End Time</th>
                <th>Participants Count</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tour in Model)
            {
                <tr>
                    <td>@tour.TourName</td>
                    <td>@tour.StartTime</td>
                    <td>@tour.EndTime</td>
                    <td>@(tour.Participants?.Count ?? 0)</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No tours have been booked.</p>
}
<a id="backButton" asp-controller="HistoricalTour" asp-action="AvailableTours" class="btn btn-primary">Back to available tours</a>
