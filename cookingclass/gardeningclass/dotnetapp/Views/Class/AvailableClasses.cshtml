@model List<dotnetapp.Models.Class>

<h1>Cooking Class Booking System</h1>

<form asp-controller="Class" asp-action="AvailableClasses" method="get" class="mb-4">
    <div class="form-row">
        <div class="form-group col-md-8">
            <label for="SearchString">Search by class name:</label>
            <input type="text" id="SearchString" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" />
        </div>
        <div class="form-group col-md-4 align-self-end">
            <button type="submit" class="btn btn-primary mb-2">Search</button>
        </div>
    </div>
</form>

@if (Model != null && Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Class Name</th>
                <th>Start Time</th>
                <th>End Time</th>
                <th>Remaining Capacity</th>
                <th>Actions</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var classItem in Model)
            {
                <tr>
                    <td>@classItem.ClassName</td>
                    <td>@classItem.StartTime</td>
                    <td>@classItem.EndTime</td>
                    <td>@(classItem.Capacity)</td>
                    <td>
                        @if (0 < classItem.Capacity)
                        {
                            <a id="bookButton" asp-controller="Booking" asp-action="ClassEnrollmentForm" asp-route-classId="@classItem.ClassID" class="btn btn-primary">Book</a>
                        }
                    </td>
                    <td>
                        <form method="post" asp-controller="Class" asp-action="DeleteConfirmation" asp-route-id="@classItem.ClassID">
                            <button type="submit" id="deleteButton" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No available classes.</p>
}

<a id="bookedClasses" asp-controller="Class" asp-action="BookedClasses" class="btn btn-primary">Booked Classes</a>
