@model List<dotnetapp.Models.Class>

<h2>Booked Classes</h2>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Class Name</th>
                <th>Start Time</th>
                <th>End Time</th>
                <th>Students Count</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var classItem in Model)
            {
                <tr>
                    <td>@classItem.ClassName</td>
                    <td>@classItem.StartTime</td>
                    <td>@classItem.EndTime</td>
                    <td>@(classItem.Students?.Count ?? 0)</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No classes have been booked.</p>
}
<a id="backButton" asp-controller="Class" asp-action="AvailableClasses" class="btn btn-primary">Back to available classes</a>
