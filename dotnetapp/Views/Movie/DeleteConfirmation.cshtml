@model dotnetapp.Models.Movie

<h2>Delete Movie</h2>

<div>
    <p>Are you sure you want to delete this movie?</p>
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>
        <dt class="col-sm-2">Director</dt>
        <dd class="col-sm-10">@Model.Director</dd>
        <dt class="col-sm-2">Release Year</dt>
        <dd class="col-sm-10">@Model.ReleaseYear</dd>
    </dl>
    <form asp-controller="Movie" asp-action="DeleteMovie" asp-route-id="@Model.MovieID" method="post">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="AvailableMovies" class="btn btn-secondary">Cancel</a>
    </form>
</div>
