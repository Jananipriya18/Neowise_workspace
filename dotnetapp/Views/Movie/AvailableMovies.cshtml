@model List<dotnetapp.Models.Movie>

<h1>Movie Review System</h1>

<form asp-controller="Movie" asp-action="AvailableMovies" method="get" class="mb-4">
    <div class="form-row">
        <div class="form-group col-md-8">
            <label for="SearchString">Search by movie title:</label>
            <input type="text" id="SearchString" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" />
        </div>
        <div class="form-group col-md-4 align-self-end">
            <button type="submit" class="btn btn-primary mb-2">Search</button>
        </div>
    </div>
</form>

@if (Model != null && Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Director</th>
                <th>Release Year</th>
                <th>Actions</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@movie.Title</td>
                    <td>@movie.Director</td>
                    <td>@movie.ReleaseYear</td>
                    <td>
                        <a id="reviewButton" asp-controller="MovieReview" asp-action="ReviewForm" asp-route-movieId="@movie.MovieID" class="btn btn-primary">Review</a>
                    </td>
                    <td>
                        <form method="post" asp-controller="Movie" asp-action="DeleteConfirmation" asp-route-id="@movie.MovieID">
                            <button type="submit" id="deleteButton" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No available movies.</p>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @Html.ActionLink("Back to available movies", "AvailableMovies", "Movie", null, new { id = "backtomovies", @class = "btn btn-secondary" })
        </div>
    </div>
}




<a id="reviewedMovies" asp-controller="Movie" asp-action="ReviewedMovies" class="btn btn-primary">Reviewed Movies</a>
