@model List<dotnetapp.Models.VRExperience>

<h2>Booked VR Experiences</h2>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Experience Name</th>
                <th>Start Time</th>
                <th>End Time</th>
                <th>Attendees Count</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var experience in Model)
            {
                <tr>
                    <td>@experience.ExperienceName</td>
                    <td>@experience.StartTime</td>
                    <td>@experience.EndTime</td>
                    <td>@(experience.Attendees?.Count ?? 0)</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No experiences have been booked.</p>
}

<a id = "backButton" asp-controller="VRExperience" asp-action="AvailableExperiences" class="btn btn-primary">Back to Available Experiences</a>
