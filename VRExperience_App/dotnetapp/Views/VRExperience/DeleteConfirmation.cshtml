@model dotnetapp.Models.VRExperience

<h2>Delete VR Experience</h2>

<div>
    <p>Are you sure you want to delete this experience?</p>
    <dl class="row">
        <dt class="col-sm-2">Experience Name</dt>
        <dd class="col-sm-10">@Model.ExperienceName</dd>
        <dt class="col-sm-2">Start Time</dt>
        <dd class="col-sm-10">@Model.StartTime</dd>
        <dt class="col-sm-2">End Time</dt>
        <dd class="col-sm-10">@Model.EndTime</dd>
        <dt class="col-sm-2">Max Capacity</dt>
        <dd class="col-sm-10">@Model.MaxCapacity</dd>
    </dl>
    <form  id = "deleteButton" asp-controller="VRExperience" asp-action="DeleteExperienceConfirmed" asp-route-id="@Model.VRExperienceID" method="post">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="AvailableExperiences" class="btn btn-secondary">Cancel</a>
    </form>
</div>
